- if @edm
  
  .edm
    %h2= @edm.title
  
    - if @edm.has_proposer?
      %span.date= "Proposed on: #{@edm.proposers.first.date.strftime("%A %B %d, %Y")} by #{link_to @edm.proposers.first.member.display_name, member_path(@edm.proposers.first.member)}"
    
    %blockquote
      %span.number= @edm.number
      = @edm.text
      
    %p= "This EDM was seconded by #{pluralize(@edm.seconders.size, 'MP')}"
    - @edm.seconders.each do |signatory|
      %p= link_to signatory.member.display_name, member_path(signatory.member)
    
      
    %p= "This EDM has been signed by #{pluralize(@edm.signatories.size, 'MP')}"
    - @edm.signatories.each do |signatory|
      %p= link_to signatory.member.display_name, member_path(signatory.member)
      
    
    -unless @edm.children.empty?
      %p Has the following amendments:
      
      - @edm.children.each do |amendment|
        .edm
          %h3= link_to amendment.title, edm_path(amendment.session_name, amendment.number)
          %blockquote
            %span.number= amendment.number
            = amendment.text
            
          - amendment.children.each do |sub_amendment|
            .edm
              %h3= link_to sub_amendment.title, edm_path(sub_amendment.session_name, sub_amendment.number)
              %blockquote
                %span.number= sub_amendment.number
                = sub_amendment.text
            