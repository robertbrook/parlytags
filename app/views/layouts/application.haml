%html
  %head
    %title= @title ? @title : 'ParlyTags'
    = stylesheet_link_tag "screen"
    - searched_for = @last_search_term ? @last_search_term : ""
    = auto_discovery_link_tag(:atom, "http://#{request.host_with_port}/search?q=#{CGI.escape(searched_for)}&t=#{params[:t]}&format=atom")
    -if @map
      = GMap.header
      = @map.to_html
  %body
    #p 
      A prototype for finding places mentioned in the UK Parliament &mdash;
      -unless current_page?(:action => 'credits')
        =link_to("More about this site.", "credits", {:title => 'More about this site.'})
      #search
        - form_tag(search_url, :name => 'search', :method => :get) do
          = text_field_tag 'q', (@last_search_term ? h(sanitize(@last_search_term)) : ''), :accesskey => 's'
          = submit_tag 'Find'
      = yield            

