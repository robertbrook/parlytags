%html
  %head
    %title= @title ? @title : 'ParlyTags'
    = stylesheet_link_tag "screen"
    -if @map
      = GMap.header
      = @map.to_html
  %body
    #header 
      #search
        - form_tag(search_url, :name => 'search', :method => :get) do
          = text_field_tag 'q', (@last_search_term ? h(sanitize(@last_search_term)) : ''), :accesskey => 's'
          = submit_tag 'Find'
    #content
      = yield      
    #footer
      = link_to_unless_current "ParlyTags", root_path
      is a prototype from the UK Parliament.
      = yield :footer
      
    
  
