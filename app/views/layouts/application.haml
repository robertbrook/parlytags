%html
  %head
    %title= @title ? @title : 'ParlyTags'
    = stylesheet_link_tag "screen"
    -if @map
      = GMap.header
      = @map.to_html
  %body
    #header
      %h1= link_to_unless_current "ParlyTags", root_path
      #search
        - form_tag(search_url, :name => 'search', :method => :get) do
          %label{:for=>"q"}
            Search for a place in the UK mentioned recently in Parliament
          = text_field_tag 'q', (@last_search_term ? h(sanitize(@last_search_term)) : ''), :accesskey => 's'
          = submit_tag 'Go'
    #content
      = yield      
    #footer
      = yield :footer
      
    
  
